extends ../layouts/commom

block content
	h1 Product


	form.ml-auto(action = "/products", method="GET", class = "d-flex")
		input(type="text", name="q", class = "form-control ")
		button(class = "btn btn-primary ml-2") Search
	
	.row
		each product in products
			.col-sm-6.col-md-4.col-lg-3
				.card.md-3
					img.card-img-top(src=product.image)
					.card-body
						h5.card-title= product.first_name
						p.card-text= product.dedescription
						a.btn.btn-primary(href='/cart/add/' + product.id) Add to cart
